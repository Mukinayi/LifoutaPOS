<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exact_it_dev.lifoutapos.transfert.ConfirmationRetraitTransfert"
    android:padding="5dp"
    android:background="@drawable/lifback"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pgbenefi"
        android:visibility="gone"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/typeidexp"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/spinnertypeidbene"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="@string/typeidexp"
                 />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/idnumberexp"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etidnum"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="@string/idnumberexp"
                android:inputType="text" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/adresse"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etadressbene"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="@string/adresse"
                android:inputType="text" />


            <Button
                android:id="@+id/btnbenef"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/valider"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
