<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exact_it_dev.lifoutapos.enrolement.CompteStatus"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/lifback">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compteProgerss"
        android:visibility="gone"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/accountnumberclient"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etNumcompte"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:background="@drawable/input"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="@string/accountnumberclient"
        android:inputType="phone" />

    <Button
        android:id="@+id/comptebtn"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:background="@drawable/button"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="@string/valider"/>

</LinearLayout>
