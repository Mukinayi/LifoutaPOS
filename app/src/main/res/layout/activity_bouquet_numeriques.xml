<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exact_it_dev.lifoutapos.bouquets.BouquetNumeriques"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/lifback">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/buttonhome"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/canalplus"
                android:layout_marginTop="20dp"
                android:id="@+id/btncanaplus"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/buttonhome"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/easy"
                android:id="@+id/btneasy"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/buttonhome"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/startimes"
                android:id="@+id/btnstartime"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
