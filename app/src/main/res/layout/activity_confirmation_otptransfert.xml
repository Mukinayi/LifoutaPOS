<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exact_it_dev.lifoutapos.transfert.ConfirmationOTPTransfert"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/lifback">

    <ProgressBar
        android:id="@+id/confirmProgressBarOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/entrerotp"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/etOTPTransfert"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="@string/otpdetail"
                android:inputType="number" />

            <Button
                android:id="@+id/btnconfirmOTP"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/valider"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/buttonhome"
                android:layout_marginBottom="10dp"/>



            <TextView
                android:id="@+id/resendSMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/smsresend"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/resendBtnOTP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:drawable/ic_dialog_email"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/smsresend"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
