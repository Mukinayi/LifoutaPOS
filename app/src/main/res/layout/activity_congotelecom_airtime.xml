<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exact_it_dev.lifoutapos.airtimes.congotelecom.CongotelecomAirtime"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numéro de téléphone"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/phoneET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Numéro de téléphone"
                android:inputType="number" />

            <TextView
                android:id="@+id/Montantdeposer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Montant du crédit"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/AmountET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Montant du crédit"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code PIN Agent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PinET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="****"
                android:inputType="numberPassword" />


            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Proceder"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
